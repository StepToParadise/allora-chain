{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Launch Node",
        "type": "go",
        "request": "launch",
        "mode": "auto",
        "program": "${workspaceFolder}/cmd/allorad",
        "args": [
          "start"
        ],
        "cwd": "${workspaceFolder}"
      },
      {
        "name": "Remote Debug",
        "type": "go",
        "debugAdapter": "dlv-dap",
        "request": "attach",
        "mode": "remote",
        "port": 2345,
        "host": "127.0.0.1",
      }
    ]
  }
  